# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=transcode
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO/S3 Configuration
STORAGE_ENDPOINT=minio:9000
STORAGE_ACCESS_KEY_ID=minioadmin
STORAGE_SECRET_ACCESS_KEY=minioadmin
STORAGE_BUCKET_NAME=videos
STORAGE_REGION=us-east-1
STORAGE_USE_SSL=false

# RabbitMQ Configuration
QUEUE_HOST=rabbitmq
QUEUE_PORT=5672
QUEUE_USER=guest
QUEUE_PASSWORD=guest
QUEUE_VHOST=/

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Transcoder Configuration
TRANSCODER_WORKER_COUNT=2
TRANSCODER_TEMP_DIR=/tmp/transcode
TRANSCODER_FFMPEG_PATH=ffmpeg
TRANSCODER_FFPROBE_PATH=ffprobe
TRANSCODER_MAX_CONCURRENT=4
